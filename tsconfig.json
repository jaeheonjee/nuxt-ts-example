{
  "extends": "@nuxt/typescript-edge",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/@types/*"]
    },
    "types": ["@types/node", "@types/jest", "@nuxt/vue-app-edge"],
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
